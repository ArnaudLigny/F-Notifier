{
  "name": "Facebook-Notifier",
  "version": "1.0.0",
  "description": "Displays your Facebook notifications unread count.",
  "homepage": "http://narno.org/Facebook-Notifier",
  "author": "Arnaud Ligny",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Narno/Facebook-Notifier.git"
  },
  "bugs": {
    "url": "https://github.com/Narno/Facebook-Notifier/issues"
  },
  "main": "gulpfile.js",
  "scripts": {
    "test": "xo",
    "build": "node_modules/.bin/gulp",
    "build:zip": "node_modules/.bin/gulp zip",
    "build:crx": "node_modules/.bin/gulp crx",
    "release": "npm run build && webstore upload --source dist --auto-publish"
  },
  "devDependencies": {
    "chrome-webstore-upload-cli": "^1.1.1",
    "del": "^3.0.0",
    "gulp": "^3.9.1",
    "gulp-clean-css": "^3.4.2",
    "gulp-cleanhtml": "^1.0.3",
    "gulp-cli": "^1.3.0",
    "gulp-crx": "git://github.com/PavelVanecek/gulp-crx.git#v0.1.0",
    "gulp-util": "^3.0.8",
    "gulp-zip": "^4.0.0",
    "jshint": "^2.9.5",
    "vinyl-paths": "^2.1.0",
    "xo": "^0.18.0"
  },
  "xo": {
    "space": true,
    "envs": [
      "browser",
      "webextensions"
    ],
    "rules": {
      "import/no-unassigned-import": 0,
      "no-lonely-if": "off"
    },
    "ignores": [
      "build/**"
    ]
  }
}
